<div class="row">
	<div class="col-sm-4 col-sm-offset-4">
		
	

<h1>Sign up Here!</h1>

<%= form_for @user do |f| %>
	<div class="form-group">
		<%= f.label :name %><br>
		<%= f.text_field :name, placeholder: "johndoe", class: 'form-control' %>
	</div>
	<div class="form-group">
		<%= f.label :email %><br>
		<%= f.text_field :email, placeholder: "you@yourmail.com", class: 'form-control' %>
	</div>
	<div class="form-group">
		<%= f.label :password %><br>
		<%= f.password_field :password, placeholder: "password ...", class: 'form-control' %>
	</div>
	<div class="form-group">
		<%= f.label :password %><br>
		<%= f.password_field :password_confirmation, placeholder: "re-enter your password", class: 'form-control' %>
	</div>
	<div class="form-group">
		<%= f.label :image %><br>
		<%= f.file_field :image, class: 'form-control' %>
	</div>

	<div class="form-group">
		<%= f.submit 'Submit', class: 'btn btn-primary' %>
	</div>
<% end %>

</div>
</div>
